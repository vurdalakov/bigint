@{
    ViewData["Title"] = "Hexadecimal to Decimal Converter";
    ViewData["Description"] = "Converts hex string to big integer";
}

<form asp-controller="Calculator" method="post">
    <table class="table">
        <tbody>
            <tr>
                <td class="fit">Hex number:</td>
                <td><textarea name="Input" rows="4" cols="50">@ViewBag.Input</textarea></td>
            </tr>
            <tr>
                <td class="fit">&nbsp;</td>
                <td><input type="submit" value="Convert" formaction="DoHexToDec" /></td>
            </tr>
            <tr>
                <td class="fit">Dec number<br />(unsighed):</td>
                <td><textarea rows="4" cols="50" readonly class="readonly">@ViewBag.Result1</textarea></td>
            </tr>
            <tr>
                <td class="fit">Dec number<br />(sighed):</td>
                <td><textarea rows="4" cols="50" readonly class="readonly">@ViewBag.Result2</textarea></td>
            </tr>
            <tr>
                <td class="fit">&nbsp;</td>
                <td><p style="visibility: @ViewBag.ResultVisibility;">This number has @ViewBag.BitCount bit(s)</p></td>
            </tr>
        </tbody>
    </table>
</form>
